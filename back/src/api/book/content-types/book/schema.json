{
  "kind": "collectionType",
  "collectionName": "books",
  "info": {
    "singularName": "book",
    "pluralName": "books",
    "displayName": "Books"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "books"
    },
    "categories": {
      "type": "enumeration",
      "enum": [
        "ficcao",
        "nao_ficcao"
      ]
    },
    "summary": {
      "type": "blocks"
    },
    "pages_count": {
      "type": "integer",
      "required": true
    },
    "publish_date": {
      "type": "date",
      "required": true
    },
    "display_date": {
      "type": "date",
      "required": true
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "pdf_file": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "files"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    }
  }
}
